@page "/Ciudad"
@using System.Net.Http.Json
@inject HttpClient http
@using UI.Data.Usuario
@if (mostrarAlerta)
{
    <div class="alert alert-success" role="alert">
        ¡Ciudad guardado exitosamente!
    </div>
}
<h1>Gestión de Ciudad</h1>
<div class="accordion" id="accordionEstudiantes">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                data-bs-target="#collapseEstudiante" aria-expanded="true">
                Registrar Ciudad
            </button>
        </h2>
        <div id="collapseEstudiante" class="accordion-collapse collapse show">
            <div class="accordion-body">
                <h2 class="text-uppercase text-center mb-5">Registrar Ciudad</h2>
                <EditForm Model="@ciudad" OnValidSubmit="RegistrarCiudad">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mb-3">
                        <label>Nombre:</label>
                        <InputText @bind-Value="ciudad.nombre" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary">Guardar</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>


@code {
    private Ciudad ciudad = new();
    private bool mostrarAlerta = false;

    private async Task RegistrarCiudad()
    {
        try
        {
            var response = await http.PostAsJsonAsync(
            "http://localhost:5000/ciudad",
            ciudad

            );

            if (response.IsSuccessStatusCode)
            {
                mostrarAlerta = true;
                ciudad = new(); // Limpia formulario
            }
            else
            {
                Console.WriteLine($"Error: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Excepción: {ex.Message}");
        }

    }

}


