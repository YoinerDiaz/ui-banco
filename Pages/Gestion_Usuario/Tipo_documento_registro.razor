@page "/TipoDocumento"
@using System.Net.Http.Json
@inject HttpClient http
@using UI.Data.Usuario
@if (mostrarAlerta)
{
    <div class="alert alert-success" role="alert">
        ¡Tipo Documento guardado exitosamente!
    </div>
}
<h1>Gestión de Documentos</h1>
<div class="accordion" id="accordionEstudiantes">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                data-bs-target="#collapseEstudiante" aria-expanded="true">
                Registrar Tipo documento
            </button>
        </h2>
        <div id="collapseEstudiante" class="accordion-collapse collapse show">
            <div class="accordion-body">
                <h2 class="text-uppercase text-center mb-5">Registrar Tipo documento</h2>
                <EditForm Model="@tipoDocumento" OnValidSubmit="RegistrarTipoDocumento">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mb-3">
                        <label>Tipo de documento:</label>
                        <InputText @bind-Value="tipoDocumento.tipo_documento" class="form-control" />
                    </div>


                    <div class="mb-3">
                        <label>Sigla:</label>
                        <InputText @bind-Value="tipoDocumento.sigla" class="form-control" />
                    </div>



                    <button type="submit" class="btn btn-primary">Guardar</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>


@code {
    private Tipo_documento tipoDocumento = new();
    private bool mostrarAlerta = false;

    private async Task RegistrarTipoDocumento()
    {
        try
        {
            var response = await http.PostAsJsonAsync(
            "http://localhost:5000/tipodocumento",
            tipoDocumento

            );

            if (response.IsSuccessStatusCode)
            {
                mostrarAlerta = true;
                tipoDocumento = new(); // Limpia formulario
            }
            else
            {
                Console.WriteLine($"Error: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Excepción: {ex.Message}");
        }
    }
}