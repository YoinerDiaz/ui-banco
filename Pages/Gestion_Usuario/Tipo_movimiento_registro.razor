@page "/TipoMovimiento"
@using System.Net.Http.Json
@inject HttpClient http
@using UI.Data.Usuario
@if (mostrarAlerta)
{
    <div class="alert alert-success" role="alert">
        ¡Tipo Movimiento guardado exitosamente!
    </div>
}
<h1>Gestión de Tipo Movimiento</h1>
<div class="accordion" id="accordionEstudiantes">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                data-bs-target="#collapseEstudiante" aria-expanded="true">
                Registrar Tipo Movimiento
            </button>
        </h2>
        <div id="collapseEstudiante" class="accordion-collapse collapse show">
            <div class="accordion-body">
                <h2 class="text-uppercase text-center mb-5">Registrar Tipo movimiento</h2>
                <EditForm Model="@tipoMovimiento" OnValidSubmit="RegistrarTipoMovimiento">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mb-3">
                        <label>Tipo de movimiento:</label>
                        <InputText @bind-Value="tipoMovimiento.tipo_movimiento" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary">Guardar</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>


@code {
    private Tipo_movimiento tipoMovimiento = new();
    private bool mostrarAlerta = false;

    private async Task RegistrarTipoMovimiento()
    {
        try
        {
            var response = await http.PostAsJsonAsync(
            "http://localhost:5000/tipomovimiento",
            tipoMovimiento

            );

            if (response.IsSuccessStatusCode)
            {
                mostrarAlerta = true;
                tipoMovimiento = new(); // Limpia formulario
            }
            else
            {
                Console.WriteLine($"Error: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Excepción: {ex.Message}");
        }
    }
}