@page "/TipoMovimiento"
@using System.Net.Http.Json
@inject HttpClient http
@using UI.Data.Usuario

@if (mostrarAlerta)
{
    <div class="alert alert-success" role="alert">
        ¡Tipo Movimiento guardado exitosamente!
    </div>
}

<h1>Gestión de Tipo Movimiento</h1>

<div class="accordion" id="accordionMovimiento">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapseMovimiento" aria-expanded="true">
                Registrar / Editar Tipo Movimiento
            </button>
        </h2>

        <div id="collapseMovimiento" class="accordion-collapse collapse show">
            <div class="accordion-body">

                <h2 class="text-uppercase text-center mb-4">
                    @(tipoMovimiento.id_tipo_movimiento == null ? "Registrar Tipo Movimiento" : "Editar Tipo Movimiento")
                </h2>

                <EditForm Model="@tipoMovimiento" OnValidSubmit="GuardarTipoMovimiento">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <input hidden @bind="tipoMovimiento.id_tipo_movimiento" />

                    <div class="mb-3">
                        <label>Tipo de movimiento:</label>
                        <InputText @bind-Value="tipoMovimiento.tipo_movimiento" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary">
                        @(tipoMovimiento.id_tipo_movimiento == null ? "Guardar" : "Actualizar")
                    </button>
                </EditForm>

            </div>
        </div>
    </div>
</div>

<hr />

<h3 class="mt-4">Lista de Tipos de Movimiento</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tipo Movimiento</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var tm in listaMovimientos)
        {
            <tr>
                <td>@tm.id_tipo_movimiento</td>
                <td>@tm.tipo_movimiento</td>
                <td>
                    <button class="btn btn-warning" @onclick="(() => EditarTipo(tm))">Editar</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {

    private Tipo_movimiento tipoMovimiento = new();
    private List<Tipo_movimiento> listaMovimientos = new();
    private bool mostrarAlerta = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarLista();
    }

    private async Task CargarLista()
    {
        listaMovimientos =
            await http.GetFromJsonAsync<List<Tipo_movimiento>>("http://localhost:5000/tipomovimiento")
            ?? new();
    }

    private async Task GuardarTipoMovimiento()
    {
        HttpResponseMessage response;

        // Crear
        if (tipoMovimiento.id_tipo_movimiento == null)
        {
            response = await http.PostAsJsonAsync(
                "http://localhost:5000/tipomovimiento",
                tipoMovimiento
            );
        }
        else // Editar
        {
            response = await http.PutAsJsonAsync(
                "http://localhost:5000/tipomovimiento",
                tipoMovimiento
            );
        }

        if (response.IsSuccessStatusCode)
        {
            mostrarAlerta = true;
            tipoMovimiento = new();
            await CargarLista();

            // Ocultar alerta después de 2 segundos
            await Task.Delay(2000);
            mostrarAlerta = false;
        }
        else
        {
            Console.WriteLine("Error al guardar o actualizar.");
        }
    }

    private void EditarTipo(Tipo_movimiento tm)
    {
        tipoMovimiento = new Tipo_movimiento
        {
            id_tipo_movimiento = tm.id_tipo_movimiento,
            tipo_movimiento = tm.tipo_movimiento
        };
    }
}
